{
  "importMap": "import_map.json",
  "nodeModulesDir": "auto",
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "mexica": "rollup --config rollup.config.js --slug mexica --release H7z",
    "updown": "rollup --config rollup.config.js --slug up-down --release KA4",
    "simulate": "lume --config _config.sim.js"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  }
}

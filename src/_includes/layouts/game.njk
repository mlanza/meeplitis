---
layout: layouts/main.njk
modules:
- ./index.js
stylesheets:
- /games/game.css
- ./index.css
---
<div class="banner">
  <img id="indicator" src="{{ indicator_url }}">
  <h1>{{ title }}</h1>
  <div class="player-range">{{ min_players }} to {{ max_players }} players</div>
  <div class="byline">
    <span>Published By:</span> {{ publisher }},
    <span>Designed By:</span> {{ designers }},
    <span>Implemented By:</span> {{ developers }}
    </div>
</div>
<section class="about">
  <h2>Playing</h2>
  {{ about | md | safe }}
</section>
<section class="implementation">
  <h2>Implementation notes</h2>
{{ implementation | md | safe }}
</section>
<section class="create">
  <h2>Open a table</h2>
  <div></div>
</section>
<section class="open">
  <h2>Tables (open or started)</h2>
  <div></div>
</section>

<!DOCTYPE html>
<html lang="{{ language }}">
  <head>
    <meta charset="utf-8">
    <title>{{ title }} | {{ site.title }}</title>
    <meta name="description" content="{{ site.description }}">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/games/index.css">
  {% for href in stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ href }}">
  {% endfor %}
  </head>
  <body>
    <div id="game">
      <img src="../../../images/meeple.png"><span id="title">{{ title }}</span><span id="phase"></span>
      <div id="replay">
        <span class="touch">0</span> of <span class="touches">0</span>
        <img data-go="inception" title="Press Shift + Left Arrow" src="../../../images/inception.png">
        <img data-go="back" title="Press Left Arrow" src="../../../images/back.png">
        <img data-go="forward" title="Press Right Arrow" src="../../../images/forward.png">
        <img data-go="present" title="Press Shift + Right Arrow" src="../../../images/present.png">
      </div>
    </div>
    {{ content | safe }}
  </body>
  {% for src in modules %}
    <script type="module" src="{{ src }}"></script>
  {% endfor %}
</html>

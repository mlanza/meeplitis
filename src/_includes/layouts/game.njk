---
layout: layouts/banner.njk
modules:
- ./index.js
stylesheets:
- /games/game.css
- ./index.css
---
{% if publisher %}
<div class="publisher">
  <label>Publisher:</label> {% if publisher_url %}<a href='{{ publisher_url }}'>{{ publisher }}</a> {% else %}{{ publisher }}{% endif %}
</div>
{% endif %}
<section class="about">
  <h2>Playing</h2>
  {{ about | md | safe }}
</section>
<section class="implementation">
  <h2>Implementation notes</h2>
{{ implementation | md | safe }}
</section>
<section class="credits">
  <h2>Credits</h2>
{{ credits | md | safe }}
</section>
<section class="create">
  <h2>Open a table</h2>
  <p>You must <a href="/signin">sign in</a> to join or open tables.</p>
</section>
<section class="open-tables">
  <h2>Open tables</h2>
  <p><img class="spinner" src="/images/spinner.gif"></p>
</section>
<section class="started-tables">
  <h2>Started tables</h2>
  <p><img class="spinner" src="/images/spinner.gif"></p>
</section>
<section class="finished-tables">
  <h2>Finished tables</h2>
  <p><img class="spinner" src="/images/spinner.gif"></p>
</section>
